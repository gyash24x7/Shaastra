{
	"name": "@shaastra/connect",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"module": "dist/main.js",
	"main": "dist/main.js",
	"types": "src/main.ts",
	"private": true,
	"scripts": {
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"build:dev": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start --watch src",
		"start:dev": "wait-on dist/main.js && nodemon",
		"typecheck": "tsc -p tsconfig.build.json",
		"dev": "run-p build:dev start:dev",
		"start": "node dist/main.js",
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate --accept-data-loss",
		"schema:publish": "node node_modules/@shaastra/scripts/schema.publish.js connect"
	},
	"dependencies": {
		"@shaastra/framework": "workspace:*"
	},
	"devDependencies": {
		"@shaastra/scripts": "workspace:*",
		"@shaastra/tsconfig": "workspace:*"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [ "./dist/*" ]
	},
	"prisma": {
		"schema": "prisma/schema.prisma"
	}
}
