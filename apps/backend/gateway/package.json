{
	"name": "@shaastra/gateway",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"module": "dist/main.js",
	"main": "dist/main.js",
	"types": "src/main.ts",
	"private": true,
	"scripts": {
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"build:dev": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start --watch src",
		"start:dev": "wait-on dist/main.js && nodemon",
		"typecheck": "tsc -p tsconfig.build.json",
		"dev": "run-p build:dev start:dev",
		"start": "node dist/main.js",
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate --accept-data-loss",
		"test": "vitest run"
	},
	"dependencies": {
		"@shaastra/framework": "workspace:*",
		"@nestjs/common": "9.2.1",
		"@nestjs/config": "2.2.0",
		"@nestjs/core": "9.2.1",
		"@nestjs/cqrs": "9.0.1",
		"@nestjs/microservices": "9.2.1",
		"@nestjs/platform-express": "9.2.1",
		"@nestjs/terminus": "9.1.4",
		"@ogma/logger": "2.4.2",
		"@prisma/client": "4.9.0",
		"bcryptjs": "2.4.3",
		"cookie-parser": "1.4.6",
		"dayjs": "1.11.7",
		"graphql": "16.6.0",
		"ioredis": "5.2.5",
		"jose": "4.11.2",
		"reflect-metadata": "0.1.13",
		"rimraf": "4.1.1",
		"rxjs": "7.8.0"
	},
	"devDependencies": {
		"@shaastra/scripts": "workspace:*",
		"@shaastra/tsconfig": "workspace:*",
		"@types/bcryptjs": "2.4.2",
		"@types/cookie-parser": "1.4.3",
		"@types/express": "4.17.15",
		"prisma": "4.9.0"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [ "./dist/*" ]
	},
	"prisma": {
		"schema": "prisma/schema.prisma"
	}
}
