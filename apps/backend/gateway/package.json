{
	"name": "@shaastra/gateway",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.ts",
	"scripts": {
		"wait": "wait-on tcp:8000 && wait-on tcp:8010 && wait-on tcp:8020",
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files --delete-dir-on-start src",
		"build:dev": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files --watch --delete-dir-on-start src",
		"start:dev": "wait-on dist/index.js && nodemon",
		"typecheck": "tsc",
		"dev": "run-p build:dev start:dev",
		"start": "node dist",
		"test": "jest --coverage",
		"test:e2e": "jest --config test/jest-e2e.json",
		"gql:generate": "rover supergraph compose --config supergraph-compose.yml > ./src/graphql/schema.graphql"
	},
	"keywords": [ ],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@apollo/rover": "0.10.0",
		"@shaastra/tsconfig": "workspace:*",
		"@types/body-parser": "1.19.2",
		"@types/cors": "2.8.13",
		"@types/express": "4.17.14",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@apollo/gateway": "2.2.1",
		"@apollo/server": "4.2.2",
		"@shaastra/consul": "workspace:*",
		"@shaastra/health": "workspace:*",
		"@shaastra/utils": "workspace:*",
		"body-parser": "1.20.1",
		"cors": "2.8.5",
		"express": "4.18.2",
		"graphql": "16.6.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [
			"./dist/*"
		]
	}
}
