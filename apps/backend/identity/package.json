{
	"name": "@shaastra/identity",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/index.js",
	"types": "src/index.ts",
	"scripts": {
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"build:dev": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files --watch  --delete-dir-on-start src",
		"start:dev": "wait-on dist/index.js && nodemon",
		"typecheck": "tsc",
		"dev": "run-p build:dev start:dev",
		"start": "node dist",
		"test": "jest --coverage",
		"test:e2e": "jest --config test/jest-e2e.json",
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate --accept-data-loss",
		"gql:generate": "graphql-codegen",
		"gql:publish": "rover subgraph publish shaastra-in1yu@current --schema=src/graphql/schema.graphql --name=identity --routing-url http://localhost:8000/api/graphql",
		"keys:generate": "node scripts/keys.generate.js"
	},
	"keywords": [ ],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@graphql-codegen/cli": "2.16.2",
		"@graphql-codegen/typescript": "2.8.6",
		"@graphql-codegen/typescript-resolvers": "2.7.11",
		"@shaastra/tsconfig": "workspace:*",
		"@types/bcryptjs": "2.4.2",
		"@types/jsonwebtoken": "8.5.9",
		"@types/pem-jwk": "2.0.0",
		"prisma": "4.8.0",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@prisma/client": "4.8.0",
		"@shaastra/framework": "workspace:*",
		"bcryptjs": "2.4.3",
		"dayjs": "1.11.7",
		"graphql": "16.6.0",
		"jsonwebtoken": "8.5.1",
		"pem-jwk": "2.0.0"
	},
	"prisma": {
		"schema": "./prisma/schema.prisma"
	},
	"codegen": {
		"schema": "./src/graphql/schema.graphql",
		"generates": {
			"./src/graphql/generated/index.ts": {
				"plugins": [ "typescript-resolvers" ],
				"config": {
					"federation": true,
					"useTypeImports": true,
					"skipTypename": true,
					"contextType": "ServiceContext",
					"avoidOptionals": false,
					"mappers": {
						"Maybe": "@shaastra/framework#Maybe",
						"Scalars": "@shaastra/framework#Scalars",
						"ServiceContext": "@shaastra/framework#ServiceContext",
						"LoginInput": "../inputs.js#LoginInput",
						"VerifyUserInput": "../inputs.js#VerifyUserInput",
						"MutationLoginArgs": "../inputs.js#MutationLoginArgs",
						"MutationVerifyUserArgs": "../inputs.js#MutationVerifyUserArgs"
					}
				}
			}
		}
	},
	"jest": {
		"moduleFileExtensions": [ "js", "json", "ts" ],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [ "**/*.(t|j)s" ],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [ "./dist/*" ]
	}
}
