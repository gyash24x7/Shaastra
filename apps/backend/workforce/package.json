{
	"name": "@shaastra/workforce",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/index.js",
	"types": "src/index.ts",
	"scripts": {
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"build:dev": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files --watch  --delete-dir-on-start src",
		"start:dev": "nodemon",
		"typecheck": "tsc",
		"dev": "run-p build:dev start:dev",
		"start": "node dist",
		"test": "jest --coverage",
		"test:e2e": "jest --config test/jest-e2e.json",
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate --accept-data-loss",
		"gql:generate": "graphql-codegen"
	},
	"keywords": [ ],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@graphql-codegen/cli": "2.16.1",
		"@graphql-codegen/typescript": "2.8.5",
		"@graphql-codegen/typescript-resolvers": "2.7.10",
		"@shaastra/tsconfig": "workspace:*",
		"prisma": "4.8.0",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@prisma/client": "4.8.0",
		"@shaastra/framework": "workspace:*",
		"dayjs": "1.11.7",
		"got": "12.5.3",
		"graphql": "16.6.0",
		"graphql-tag": "2.12.6"
	},
	"prisma": {
		"schema": "./prisma/schema.prisma"
	},
	"codegen": {
		"schema": "./src/graphql/schema.graphql",
		"generates": {
			"./src/graphql/generated/index.ts": {
				"plugins": [
					"typescript-resolvers"
				],
				"config": {
					"federation": true,
					"useTypeImports": true,
					"skipTypename": true,
					"contextType": "ServiceContext<PrismaClient>",
					"avoidOptionals": false,
					"mappers": {
						"ServiceContext": "@shaastra/framework#ServiceContext",
						"PrismaClient": "@prisma/client/workforce/index.js#PrismaClient",
						"Member": "@prisma/client/workforce/index.js#Member",
						"Team": "@prisma/client/workforce/index.js#Team",
						"Department": "@prisma/client/workforce/index.js#Department",
						"MemberPosition": "@prisma/client/workforce/index.js#MemberPosition",
						"CreateMemberInput": "../inputs.js#CreateMemberInput",
						"EnableMemberInput": "../inputs.js#EnableMemberInput",
						"CreateTeamInput": "../inputs.js#CreateTeamInput",
						"MutationEnableMemberArgs": "../inputs.js#MutationEnableMemberArgs",
						"MutationCreateMemberArgs": "../inputs.js#MutationCreateMemberArgs",
						"MutationCreateTeamArgs": "../inputs.js#MutationCreateTeamArgs",
						"Maybe": "@shaastra/framework#Maybe",
						"Scalars": "@shaastra/framework#Scalars"
					}
				}
			}
		}
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [
			"./dist/*"
		]
	}
}
