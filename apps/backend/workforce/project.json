{
	"name": "workforce",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "apps/backend/workforce/src",
	"projectType": "application",
	"targets": {
		"docker:build": {
			"dependsOn": [ "build" ],
			"command": "docker build -f apps/backend/workforce/Dockerfile . -t ghcr.io/gyash24x7/shaastra-workforce"
		},
		"db:push": {
			"command": "prisma db push --schema=apps/backend/workforce/prisma/schema.prisma --skip-generate --accept-data-loss"
		},
		"db:generate": {
			"inputs": [ "{projectRoot}/prisma/schema.prisma" ],
			"outputs": [ "{workspaceRoot}/node_modules/@prisma/client/workforce/**" ],
			"command": "prisma generate --schema=apps/backend/workforce/prisma/schema.prisma"
		},
		"test": {
			"dependsOn": [ "db:generate" ],
			"executor": "@nrwl/vite:test",
			"outputs": [ "apps/backend/workforce/coverage" ],
			"options": {
				"passWithNoTests": true,
				"reportsDirectory": "coverage",
				"config": "vitest.config.ts"
			}
		},
		"build": {
			"inputs": [ "{projectRoot}/prisma", "{projectRoot}/src" ],
			"dependsOn": [ "db:generate" ],
			"executor": "@nrwl/webpack:webpack",
			"outputs": [ "{options.outputPath}" ],
			"options": {
				"target": "node",
				"compiler": "tsc",
				"outputPath": "apps/backend/workforce/dist",
				"main": "apps/backend/workforce/src/main.ts",
				"tsConfig": "apps/backend/workforce/tsconfig.build.json",
				"assets": [ "apps/backend/workforce/src/assets" ]
			},
			"configurations": {
				"production": {
					"optimization": true,
					"extractLicenses": true,
					"inspect": false
				}
			}
		},
		"serve": {
			"executor": "@nrwl/js:node",
			"options": {
				"inspect": false,
				"buildTarget": "workforce:build"
			},
			"configurations": {
				"production": {
					"buildTarget": "workforce:build:production"
				}
			}
		}
	},
	"tags": [ ]
}
