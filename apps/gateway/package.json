{
	"name": "@shaastra/gateway",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"wait": "wait-on tcp:8000 && wait-on tcp:8010 && wait-on tcp:8020",
		"schema:generate": "ts-node ./node_modules/@shaastra/scripts/schema.generate.ts",
		"prebuild": "rimraf dist",
		"build": "tsc",
		"start": "node dist/main",
		"dev": "pnpm run wait && ts-node src/main.ts",
		"test": "jest --coverage",
		"test:e2e": "jest --config test/jest-e2e.json"
	},
	"devDependencies": {
		"@shaastra/scripts": "workspace:*"
	},
	"dependencies": {
		"@shaastra/schema": "workspace:*"
	},
	"jest": {
		"moduleFileExtensions": [ "js", "json", "ts" ],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [ "**/*.(t|j)s" ],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
