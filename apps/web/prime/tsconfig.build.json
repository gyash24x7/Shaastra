{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"rootDir": "src",
		"resolveJsonModule": true,
		"noEmit": true
	},
	"include": [ "src" ],
	"exclude": [
		"dist",
		"build",
		"node_modules",
		".storybook",
		"**/*.spec.(ts|tsx|js|jsx)",
		"**/*.test.(ts|tsx|js|jsx)",
		"**/*.stories.(ts|tsx|js|jsx)",
		"vite.config.ts",
		"tailwind.config.ts"
	]
}
