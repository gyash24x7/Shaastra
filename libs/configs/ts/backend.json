{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Backend",
	"extends": "./base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "../../../dist/out-tsc",
		"module": "commonjs",
		"types": [ "node" ],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2015",
		"esModuleInterop": true
	},
	"exclude": [ "jest.config.ts", "**/*.spec.ts", "**/*.test.ts" ],
	"include": [ "src" ]
}
