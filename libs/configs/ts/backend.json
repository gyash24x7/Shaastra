{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Backend",
	"extends": "./base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"module": "Node16",
		"types": [ "node" ],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "ES2020",
		"esModuleInterop": true,
		"moduleResolution": "Node16",
		"sourceMap": true
	},
	"exclude": [ "jest.config.ts", "**/*.spec.ts", "**/*.test.ts" ],
	"include": [ "src" ]
}
