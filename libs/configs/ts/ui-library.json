{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "UI Library",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [ "DOM", "DOM.Iterable", "ESNext" ],
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"types": [ "vite/client" ],
		"noEmit": true
	},
	"exclude": [
		"src/**/*.spec.ts",
		"src/**/*.test.ts",
		"src/**/*.spec.tsx",
		"src/**/*.test.tsx",
		"src/**/*.spec.js",
		"src/**/*.test.js",
		"src/**/*.spec.jsx",
		"src/**/*.test.jsx",
		"src/**/*.stories.ts",
		"src/**/*.stories.js",
		"src/**/*.stories.jsx",
		"src/**/*.stories.tsx"
	],
	"include": [ "src" ]
}
