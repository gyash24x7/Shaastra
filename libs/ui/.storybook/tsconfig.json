{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"jsxImportSource": "solid-js",
		"jsx": "preserve",
		"lib": [ "DOM", "DOM.Iterable", "ESNext" ]
	},
	"exclude": [ "../**/*.spec.ts" ],
	"include": [
		"../src/**/*.stories.ts",
		"../src/**/*.stories.js",
		"../src/**/*.stories.jsx",
		"../src/**/*.stories.tsx",
		"../src/**/*.stories.mdx",
		"*.ts",
		"*.js"
	]
}
