{
	"name": "@shaastra/framework",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "src/index.ts",
	"scripts": {
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"typecheck": "tsc",
		"test": "jest --coverage"
	},
	"devDependencies": {
		"@shaastra/tsconfig": "workspace:*",
		"@types/body-parser": "1.19.2",
		"@types/consul": "0.40.0",
		"@types/cookie-parser": "1.4.3",
		"@types/cors": "2.8.13",
		"@types/express": "4.17.15",
		"@types/superagent": "4.1.16",
		"typescript": "4.9.4"
	},
	"dependencies": {
		"@apollo/gateway": "2.2.2",
		"@apollo/server": "4.3.0",
		"@apollo/subgraph": "2.2.2",
		"@godaddy/terminus": "4.11.2",
		"body-parser": "1.20.1",
		"change-case": "4.1.2",
		"consul": "1.2.0",
		"cookie-parser": "1.4.6",
		"cors": "2.8.5",
		"express": "4.18.2",
		"got": "12.5.3",
		"graphql": "16.6.0",
		"jose": "4.11.1",
		"superagent": "8.0.6"
	},
	"jest": {
		"moduleFileExtensions": [ "js", "json", "ts" ],
		"testRegex": ".*\\.test\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": [ "@swc/jest" ]
		},
		"coverageDirectory": "./coverage",
		"collectCoverageFrom": [ "src/**/*.(t|j)s" ],
		"testEnvironment": "node"
	}
}
