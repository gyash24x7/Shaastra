{
	"name": "@shaastra/client",
	"version": "1.0.0",
	"description": "",
	"type": "module",
	"main": "dist/index.js",
	"types": "src/index.ts",
	"scripts": {
		"schema:fetch": "node node_modules/@shaastra/scripts/schema.fetch.js",
		"gql:generate": "graphql-codegen-esm",
		"build": "swc --config-file=../../../.swcrc --out-dir=dist --copy-files  --delete-dir-on-start src",
		"typecheck": "tsc -p tsconfig.build.json"
	},
	"keywords": [ ],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@shaastra/scripts": "workspace:*",
		"@shaastra/tsconfig": "workspace:*"
	},
	"codegen": {
		"overwrite": true,
		"schema": "src/schema.graphql",
		"generates": {
			"src/generated/index.ts": {
				"plugins": [ "typescript" ],
				"config": {
					"avoidOptionals": true,
					"constEnums": true,
					"skipTypename": true,
					"strictScalars": true,
					"useTypeImports": true,
					"emitLegacyCommonJSImports": false,
					"scalars": {
						"Date": "Date"
					},
					"immutableTypes": true,
					"legacyMode": false
				}
			}
		}
	}
}
