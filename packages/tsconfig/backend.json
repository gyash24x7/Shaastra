{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Backend",
	"extends": "./base.json",
	"compilerOptions": {
		"types": [ "node" ],
		"target": "ES2022",
		"esModuleInterop": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": [ "**/*.spec.ts", "**/*.test.ts" ]
}
