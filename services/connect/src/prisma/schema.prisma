generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
    provider = "postgresql"
    url      = env("CONNECT_DB_URL")
}

enum ChannelType {
  DIRECT
  GROUP
}

model Channel {
    id                String            @default(cuid()) @id
    name              String            @unique
    description       String
    createdOn         DateTime          @default(now())
    archived          Boolean           @default(false)
    type              ChannelType       @default(GROUP)
    createdById       String
    messages          Message[]
}

model Message {
    id                String            @default(cuid()) @id
    content           String
    createdById       String
    channelId         String
    channel           Channel           @relation(fields: [channelId], references: [id])
}