generator client {
  provider = "prisma-client-js"
  output   = "../../../node_modules/@prisma/client/identity"
}

datasource db {
    provider = "postgresql"
    url      = env("IDENTITY_DB_URL")
}

model User {
    id              String      @id @default(cuid())
    name            String
    email           String
    username        String      @unique
    password        String
    verified        Boolean     @default(false)
    roles           Role[]
}

model Role {
    id              String      @id
    role            String      @unique
    users           User[]
}

model Token {
    id              String      @id @default(cuid())
    token           String
    userId          String
    expiry          DateTime
    createdAt       DateTime    @default(now())
}
