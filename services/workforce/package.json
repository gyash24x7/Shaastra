{
	"name": "@shaastra/workforce",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"main": "dist/main.js",
	"scripts": {
		"db:generate": "prisma generate",
		"db:push": "prisma db push --skip-generate",
		"clean": "rimraf dist",
		"build": "tsc && swc --config-file=../../.swcrc --out-dir=dist --copy-files src",
		"build:dev": "swc --config-file=../../.swcrc --out-dir=dist --copy-files --watch src",
		"start:dev": "nodemon",
		"dev": "run-p build:dev start:dev",
		"start": "node dist/main.js",
		"test": "jest --coverage",
		"test:e2e": "jest --config test/jest-e2e.json"
	},
	"dependencies": {
		"@prisma/client": "4.7.0",
		"@shaastra/auth": "workspace:*",
		"@shaastra/consul": "workspace:*",
		"@shaastra/health": "workspace:*",
		"@shaastra/mail": "workspace:*",
		"@shaastra/schema": "workspace:*",
		"@shaastra/utils": "workspace:*"
	},
	"devDependencies": {
		"prisma": "4.7.0"
	},
	"jest": {
		"moduleFileExtensions": [ "js", "json", "ts" ],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [ "**/*.(t|j)s" ],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	},
	"prisma": {
		"schema": "src/prisma/schema.prisma"
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [ "dist/*" ]
	}
}
