{
	"compileOnSave": false,
	"extends": "@tsconfig/node16-strictest",
	"compilerOptions": {
		"rootDir": ".",
		"exactOptionalPropertyTypes": false,
		"strictPropertyInitialization": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUncheckedIndexedAccess": false,
		"importHelpers": true,
		"baseUrl": ".",
		"paths": {
			"@shaastra/auth": [ "libs/auth/src/index.ts" ],
			"@shaastra/client": [ "libs/client/src/index.ts" ],
			"@shaastra/consul": [ "libs/consul/src/index.ts" ],
			"@shaastra/health": [ "libs/health/src/index.ts" ],
			"@shaastra/mail": [ "libs/mail/src/index.ts" ],
			"@shaastra/utils": [ "libs/utils/src/index.ts" ],
			"@shaastra/utils/*": [ "libs/utils/src/*" ],
			"@shaastra/ui": [ "libs/ui/src/index.ts" ],
			"@shaastra/ui/*": [ "libs/ui/src/*" ]
		}
	},
	"exclude": [ "node_modules", "tmp" ]
}