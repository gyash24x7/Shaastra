{
	"$schema": "https://turbo.build/schema.json",
	"pipeline": {
		"dev": {
			"dependsOn": [ "^build", "db:generate", "gql:generate" ],
			"cache": false
		},
		"build": {
			"dependsOn": [ "^build", "db:generate", "gql:generate" ],
			"outputs": [ "dist/**" ]
		},
		"typecheck": {
			"dependsOn": [ "^typecheck", "gql:generate", "db:generate" ],
			"outputs": [ ]
		},
		"start": {
			"dependsOn": [ "build", "typecheck" ],
			"cache": false
		},
		"test": {
			"dependsOn": [ "typecheck" ],
			"outputs": [ "coverage/**" ]
		},
		"db:push": {
			"inputs": [ "prisma/schema.prisma" ],
			"outputs": [ ]
		},
		"db:generate": {
			"inputs": [ "prisma/schema.prisma" ],
			"outputs": [ ]
		},
		"gql:generate": {
			"inputs": [ "src/**/schema.graphql" ],
			"outputs": [ "src/graphql/generated/**" ]
		},
		"schema:publish": {
			"inputs": [ "src/graphql/schema.graphql" ],
			"outputs": [ ],
			"env": [
				"APOLLO_KEY",
				"APOLLO_GRAPH_REF"
			]
		},
		"schema:fetch": {
			"dependsOn": [ "@shaastra/connect#schema:publish", "@shaastra/workforce#schema:publish" ],
			"outputs": [ "src/schema.graphql" ],
			"env": [
				"APOLLO_KEY",
				"APOLLO_GRAPH_REF"
			]
		},
		"@shaastra/client#gql:generate": {
			"inputs": [ "src/schema.graphql" ],
			"dependsOn": [ "schema:fetch" ],
			"outputs": [ "src/generated/**" ]
		}
	}
}
